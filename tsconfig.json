{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "./typings"],
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": "./",
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"],
      "@material/material-color-utilities": ["packages/material-color-utilities"]
    }
  },
  "include": ["src/**/*", "packages/**/*", "typings/**/*", ".umirc.ts", "typings.d.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests",
    "scripts"
  ]
}
